{
	"name": "zor-pizza",
	"version": "1.0.0",
	"private": true,
	"packageManager": "pnpm@9.15.9",
	"engines": {
		"node": ">=20"
	},
	"scripts": {
		"lint": "pnpm --filter frontend run lint",
		"dev": "pnpm --filter frontend dev",
		"dev:backend": "pnpm --filter zor-pizza-backend dev",
		"dev:both": "concurrently -n backend,frontend -c blue,green \"pnpm run dev:backend\" \"pnpm run dev\"",
		"build": "pnpm -r build",
		"test": "pnpm -r test",
		"test:frontend": "pnpm --filter frontend test",
		"test:backend": "pnpm --filter zor-pizza-backend test",
		"test:frontend:watch": "pnpm --filter frontend test:watch",
		"test:backend:watch": "pnpm --filter zor-pizza-backend test:watch",
		"test:frontend:coverage": "pnpm --filter frontend test:coverage",
		"test:backend:coverage": "pnpm --filter zor-pizza-backend test:coverage",
		"test:e2e": "pnpm --filter frontend test:e2e",
		"test:e2e:ui": "pnpm --filter frontend test:e2e:ui",
		"test:changed": "pnpm --filter zor-pizza-backend test:changed && pnpm --filter frontend test:changed",
		"test:all": "pnpm -r test && pnpm --filter frontend test:e2e"
	},
	"devDependencies": {
		"@types/node": "^25.2.2",
		"concurrently": "^9.2.1"
	}
}