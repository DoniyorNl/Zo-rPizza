{
	"name": "zor-pizza-backend",
	"version": "1.0.0",
	"engines": {
		"node": ">=20"
	},
	"scripts": {
		"dev": "node --import tsx --watch src/server.ts",
		"dev:tsx": "tsx watch src/server.ts",
		"build": "echo 'Build skipped for production'",
		"start": "tsx src/server.ts",
		"test": "npx jest --coverage",
		"test:watch": "npx jest --watch",
		"test:changed": "npx jest --onlyChanged --changedSince=main",
		"test:unit": "npx jest --testPathPattern=tests/unit",
		"test:integration": "npx jest --testPathPattern=tests/integration",
		"postinstall": "prisma generate --schema prisma/schema.prisma",
		"prisma:generate": "prisma generate",
		"prisma:push": "prisma db push",
		"prisma:migrate": "prisma migrate deploy",
		"prisma:seed": "tsx prisma/seed.ts"
	},
	"prisma": {
		"seed": "tsx prisma/seed.ts"
	},
"dependencies": {
    "@prisma/client": "^6.2.0",
    "@sentry/node": "^8.46.0",
    "stripe": "^17.5.0",
    "axios": "^1.7.9",
		"bcryptjs": "^2.4.3",
		"cors": "^2.8.5",
		"dotenv": "^17.2.3",
		"express": "^4.22.1",
		"express-rate-limit": "^8.2.1",
		"firebase-admin": "^13.6.0",
		"helmet": "^8.1.0",
		"jsonwebtoken": "^9.0.2",
"morgan": "^1.10.1",
  "resend": "^4.0.1",
  "socket.io": "^4.7.0",
  "web-push": "^3.6.7",
  "winston": "^3.17.0",
  "zod": "^4.3.5"
	},
	"devDependencies": {
		"@types/bcryptjs": "^2.4.6",
		"@types/cors": "^2.8.19",
		"@types/express": "^5.0.6",
		"@types/helmet": "^0.0.48",
		"@types/jest": "^29.5.14",
		"@types/jsonwebtoken": "^9.0.7",
		"@types/morgan": "^1.9.10",
		"@types/node": "^22.19.7",
		"@types/supertest": "^6.0.2",
		"jest": "^29.7.0",
		"jest-mock-extended": "^4.0.0",
		"nodemon": "^3.1.11",
		"prisma": "^6.2.0",
		"supertest": "^7.0.0",
		"ts-jest": "^29.2.5",
		"ts-node": "^10.9.2",
		"tsx": "^4.19.2",
		"typescript": "^5.9.3"
	}
}
